@model IEnumerable<NetCoreMVCLab03.Models.Book>
@{
    ViewData["Title"] = "Index";
}
<h2>Danh sách các cuốn sách</h2>
<from action="" method="post" class="from-inline" role="from">
<div class="from-group">
    <select name="AuthorId" class="from-control" asp-items="@ViewBag.authors">
        <option value="">Chọn Tác Giả</option>
    </select>
        <select name="GenreId" class="from-control" asp-items="@ViewBag.genres">
    <option value="">Chọn Thể Loại</option>
    </select>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    <a asp-action="Create" class="btn btn-danger">Thêm mới</a>
</div> 

</from>
<hr/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác Giả</th>
            <th>Thể Loại</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenresId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40"/>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn tbn-sm btn-primary">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>